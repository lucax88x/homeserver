{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "declaration": false,
    "isolatedModules": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "scripts/**/*.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
