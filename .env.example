# Proxmox Home Server Configuration
# Copy to .env and customize

# Nginx Proxy Manager API (for sync-npm script)
NPM_EMAIL=admin@example.com
NPM_PASSWORD=changeme

# Nginx Proxy Manager
NPM_HOSTNAME=nginx-proxy-manager
NPM_CPU=1
NPM_RAM=1024
NPM_DISK=4

# Jellyfin
JELLYFIN_HOSTNAME=jellyfin
JELLYFIN_CPU=2
JELLYFIN_RAM=2048
JELLYFIN_DISK=8

# AdGuard Home
ADGUARD_HOSTNAME=adguard
ADGUARD_CPU=1
ADGUARD_RAM=512
ADGUARD_DISK=2

# Portainer
PORTAINER_HOSTNAME=portainer
PORTAINER_CPU=1
PORTAINER_RAM=1024
PORTAINER_DISK=4

# Glance
GLANCE_HOSTNAME=glance
GLANCE_CPU=1
GLANCE_RAM=512
GLANCE_DISK=2
